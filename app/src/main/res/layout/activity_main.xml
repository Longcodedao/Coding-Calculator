<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="32sp">

    </TextView>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layouts"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="64sp">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/button_layouts"
        android:background="#F1F1F1"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true">
    
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#F44336"
                app:cornerRadius="36dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/button_c"
                android:text="C">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#818181"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_open_bracket"
                android:text="(">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#818181"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_close_bracket"
                android:text=")">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#FF6433"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_divide"
                android:text="/">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/button_7"
                android:text="7">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_8"
                android:text="8">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_9"
                android:text="9">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#FF6433"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_multiply"
                android:text="*">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/button_4"
                android:text="4">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_5"
                android:text="5">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_6"
                android:text="6">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#FF6433"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_add"
                android:text="+">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/button_1"
                android:text="1">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_2"
                android:text="2">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_3"
                android:text="3">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#FF6433"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_sub"
                android:text="-">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#F44336"
                app:cornerRadius="36dp"
                android:textSize="21sp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:id="@+id/button_ac"
                android:text="AC">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_0"
                android:text="0">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#009688"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_dot"
                android:text=".">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:backgroundTint="#FF6433"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:id="@+id/button_equal"
                android:text="=">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>